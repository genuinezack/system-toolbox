# My collection of terminal tweaks. Source this from your platform's .bashrc or .bash_profile

alias up="cd .."

# Shortcut to open the iPhone emulator for mobile website testing
alias iPhone="open /Applications/Xcode.app/Contents/Applications/iPhone\ Simulator.app"

# Credit to @JorgeO for this gorgeous git log modified version
alias glow="git log --graph --abbrev-commit --date=relative --pretty=\"%Cgreen%h %Creset%s - %C(bold blue)%an %Creset- %Cblue%ad%C(bold red)%d%Creset\""
alias gs="git status"
alias gg="git grep"

alias pull="git pull"
alias push="git push origin master"
alias sync="pull && push"

# Enable color in the terminal
CLICOLOR=1

LSCOLORS=gxfxcxdxbxegedabagacad

export PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;36m\]\w\[\033[00m\] $ '

# Enable color for iTerm
export TERM=xterm-color

# Define UTF-8 as our terminal language to ensure emoji support!
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
